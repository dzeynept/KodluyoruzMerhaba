<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  
    tools:context="com.example.zeynep.activityfragment.MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main_btnSend"
        android:text="@string/send"
        android:onClick="send"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="@string/my_activity"
        android:textSize="20sp"
        android:id="@+id/mainText"/>
    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.zeynep.activityfragment.MainFragment"
        android:tag="sdsdfs"
        android:id="@+id/main_fragment"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activity_main_frmSecondFragment">
    </FrameLayout>

</LinearLayout>
